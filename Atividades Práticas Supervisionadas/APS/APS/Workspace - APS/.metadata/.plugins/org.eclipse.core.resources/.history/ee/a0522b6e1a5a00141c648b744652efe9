						try{
							sleep(100);
							progressBar.setValue((int) i);
							
							if (i > 100)
							{
								i = 100;
							}
						
							
					
						}
						catch(InterruptedException erro){
							
						}
						
						double a;
						
						a = progressBar.getValue();
						
						if (a == 0)
						{
							JOptionPane.showMessageDialog(null, "Acabou!");
							btnBotao.setVisible(true);
						}
					}
				}
				
			}.start();
			}});
		
	
		
		
